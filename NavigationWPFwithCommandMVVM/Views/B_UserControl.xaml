<UserControl x:Class="NavigationWPFwithCommandMVVM.Views.B_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationWPFwithCommandMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gray">

        <Button Grid.Row="1" Content="Go to A" Width="150" Height="50" Command="{Binding GotoAcommand}"></Button>

        <ContentControl Grid.Row="3" Content="{Binding SelectedViewModel}"></ContentControl>
    </Grid>
</UserControl>
